<% include ./partials/header %>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h1>Blog Posts</h1>		
		<% blogs.forEach(function(blogpost){ %>
			<div class="panel panel-default">		
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-5">
							<img src="<%=blogpost.image%>" class="img-responsive" />
						</div>
						<div class="col-xs-7">
							<h3><a href="/blogs/<%=blogpost._id%>"><%=blogpost.title%></a></h3>
							<p class="date">
								<%=blogpost.created.toDateString()%> 
							</p>
							<p>
								<%=blogpost.body.substring(0,30)%>...
							</p>
						</div>
					</div>
				</div>
			</div>		
		<% });%>		
	</div>
	<div class="col-md-3"></div>
</div>

<% include ./partials/footer %>