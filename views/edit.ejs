<% include ./partials/header %>

<div class="row">
	<h1 class="text-center">Edit Blogpost</h1>
	<div class="col-md-3"></div>
	<div class="col-md-6">		
		<form method="POST" action="/blogs/<%=blog._id%>?_method=PUT">
			<div class="form-group">
				<label for="title">Title:</label>
				<input type="text" name="title" class="form-control" id="title" required="" value="<%=blog.title%>">
			</div>
			<div class="form-group">
				<label for="image">Image Url:</label>
				<input type="text" name="image" class="form-control" id="image" required="" value="<%=blog.image%>">
			</div>
			<div class="form-group">
				<label for="body">Your Post</label>
  				<textarea class="form-control" name="body" rows="5" id="body" required=""><%=blog.body%></textarea>
			</div>			
			<button type="submit" class="btn btn-success">Save</button>
			<a href="/blogs/<%=blog._id%>" class="btn btn-default">Cancel</a>
		</form>
	</div>
	<div class="col-md-3"></div>
</div>

<% include ./partials/footer %>